<Window x:Class="WPFView.View.SaveDialogV2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFView.View"
        mc:Ignorable="d"
        Title="Save Game" Height="148" Width="259" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="26,10,0,0" TextWrapping="Wrap" Text="Enter save name:" VerticalAlignment="Top" Width="102"/>
        <TextBox x:Name="SaveName" HorizontalAlignment="Center" Height="20" TextWrapping="Wrap" Text="{Binding SaveName}" VerticalAlignment="Top" Width="205" Margin="0,31,0,0" />
        <Button Content="_Ok" Command="{Binding SaveCommand}" HorizontalAlignment="Left" Margin="43,66,0,0" VerticalAlignment="Top" Height="22" Width="68"/>
        <Button Content="_Cancel" Command="{Binding CancelCommand}" HorizontalAlignment="Left" Margin="149,66,0,0" VerticalAlignment="Top" Height="22" Width="68" RenderTransformOrigin="0.808,0.563"/>
    </Grid>
</Window>
